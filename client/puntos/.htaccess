<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Rutas específicas que serán manejadas por React, incluyendo subrutas
    RewriteRule ^(inicio|documentos|tools|profile|admin)(/.*)?$ /index.html [L]

    # Deja que el servidor maneje todas las demás rutas, incluyendo la raíz "/"
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^.*$ - [L]
</IfModule>
